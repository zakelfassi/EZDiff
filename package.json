{
  "name": "ezdiff",
  "version": "1.0.4",
  "description": "Easy Text Comparison Tool",
  "author": "Zak El Fassi <zakelfassi@gmail.com>",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "electron:dev": "concurrently \"vite\" \"electron .\"",
    "electron:build": "vite build && electron-builder",
    "electron:preview": "electron .",
    "release": "electron-builder -p always",
    "git:release": "git tag -a v$npm_package_version -m \"Release $npm_package_version\" && git push origin v$npm_package_version"
  },
  "dependencies": {
    "diff": "^5.1.0",
    "electron-updater": "^6.3.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.10",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^1.1.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.zakelfassi.ezdiff",
    "productName": "EZDiff",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    },
    "publish": {
      "provider": "github",
      "owner": "zakelfassi",
      "repo": "ezdiff"
    }
  }
}
